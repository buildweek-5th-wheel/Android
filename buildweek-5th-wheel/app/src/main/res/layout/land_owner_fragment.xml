<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/land_owner_fragment"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/image_add_image"
            android:adjustViewBounds="true"
            android:src="@drawable/car_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/listing_name"
            android:hint="Name of listing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/listing_description"
            android:hint="Description of listing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/button_submit_listing"
            android:text="Add to listing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>